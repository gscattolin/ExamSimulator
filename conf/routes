
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.FrontendController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /summary                controllers.HomeController.appSummary

GET     /exam            controllers.ExamSimulatorController.getExamList

POST    /assessment        controllers.ExamSimulatorController.createAssessment

GET     /assessment/:assessmentId/question/:questionId controllers.ExamSimulatorController.getQuestionByAssessment(assessmentId:Int,questionId:Int)

PUT     /assessment/:assessmentId/question/:questionId  controllers.ExamSimulatorController.checkAnswerByAssessment(assessmentId:Int,questionId:Int)

GET     /assessment/:assessmentId/report    controllers.ExamSimulatorController.getAssessmentReport(assessmentId:Int)

GET     /assessment/:assessmentId/question              controllers.ExamSimulatorController.getAssessmentQuestions(assessmentId:Int)

GET     /*file                      controllers.FrontendController.assetOrDefault(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      